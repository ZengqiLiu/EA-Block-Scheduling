<div class="block">
  <h3 class="block-title">
    <input type="checkbox" name="block[selected_block_ids][]" value="<%= block.id %>" class="block-selector">
    Block <%= index + 1 %>
  </h3>
  <ul>
    <% block.courses.each do |course| %>
      <li>
        <strong><%= course.sec_name %></strong><br>
        <%= course.days %> 
        <%= course.start_time.strftime("%I:%M %p") %>-<%= course.end_time.strftime("%I:%M %p") %>
        <!-- Hidden field for course id -->
        <%= hidden_field_tag "block[courses][]", course.id, class: "course-id" %>
      </li>
    <% end %>
  </ul>
</div> 