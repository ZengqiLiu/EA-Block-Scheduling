<div class="block">
  <h3 class="block-title">
    <input type="checkbox" name="selected_blocks[]" value="<%= index + 1 %>">
    Block <%= index + 1 %>
  </h3>
  <ul>
    <% block.courses.each do |course| %>
      <li>
        <strong><%= course.sec_name %></strong><br>
        <%= course.days %> 
        <%= course.start_time.strftime("%I:%M %p") %>-<%= course.end_time.strftime("%I:%M %p") %>
      </li>
    <% end %>
  </ul>
</div> 